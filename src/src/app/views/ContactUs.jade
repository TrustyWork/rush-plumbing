main#semiIntroBox
    include _menu-common.jade

article#suportInfo
    div#position
        p
            a.unstyled(href="#!/")= "Home"
        i.fa.fa-angle-right
        p
            a.unstyled(href="#")= "CONTACT US"
    div#content
        h2= "Contact Us"
        p.
            If you want more information fill in this form. You will be contacted as soon as possible.
            Please fill in all required fields.
        form(ng-class="{'ng-cloak': !!processSend}")
            div.form-item
                label(for="input-id-0")
                    text.class= "Your name"
                    span=" *"
                input#input-id-0(ng-model="message.author" type="text" required="required" style="background-repeat: repeat; background-image: none; background-position: 0% 0%;")
            div.form-item
                label(for="input-id-1")
                    text.class= "Your email"
                    span=" *"
                input#input-id-1(ng-model="message.email" type="text" required="required" style="background-repeat: repeat; background-image: none; background-position: 0% 0%;")
            div.form-item
                label(for="input-id-2")
                    text.class= "Phone number"
                    span= " *"
                input#input-id-2(ng-model="message.phone" type="text" required="required" style="background-repeat: repeat; background-image: none; background-position: 0% 0%;")
            div.form-item
                label(for="input-id-3")
                    text.class= "How did you hear about us?"
                    span= ""
                input#input-id-3(ng-model="message.didYouHear" type="text" required="required" style="background-repeat: repeat; background-image: none; background-position: 0% 0%;")
            div.form-item
                label(for="input-id-4")
                    text.class= "Describe your request"
                    span= " *"
                textarea#input-id-5(ng-model="message.content" type="text" required="required" style="background-repeat: repeat; background-image: none; background-position: 0% 0%;")
            input(type="submit" value="Send message" ng-click="send(message)")
        div.text-center.w-100per(ng-class="{'ng-cloak': processSend != 1}")
            img.unsized(src="./images/loading.svg")
        p.text-center.w-100per(ng-class="{'ng-cloak': processSend != 2}")
            b= "message send"